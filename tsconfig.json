{
    "compilerOptions": {
      "removeComments": true,
      "module": "commonjs",
      "jsx": "react",
      "watch": true,
      "lib": ["es6", "dom"],
      "plugins": [
        {
          "name": "typescript-plugin-css-modules"
        }
      ],
      "esModuleInterop": true,
      // "target": "es5",
      "target": "ES2020",
      "moduleResolution": "node"
    },
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
    "include": ["src", "index.d.ts"]
  }